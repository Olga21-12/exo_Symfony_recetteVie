<footer class="footer bg-dark">
        <nav class="nav-footer">
            <ul class="nav-footer-list">
                <li>
                    <a class="nav-link {{app.current_route == 'home' ? 'active' : ''}}" "href={{ path('home') }}">Accueil</a>
                </li>
                <li>
                    <a class="nav-link {{app.current_route == 'app_recipe_show' or app.current_route == 'app_recipe_index' ? 'active' : ''}}" "href={{ path('app_recipe_index') }}">Liste de Recettes</a>
                </li>
                {% if app.user %}
                <li class="nav-item ">
                    <a class="nav-link {{ app.current_route == 'app_recipe_create' ? 'active' : '' }}" href={{ path('app_recipe_create') }}>Ajouter une Recette</a>
                </li>
                
                <li class="nav-item ">
                    <a class="nav-link" href={{ path('app_logout') }}>Logout</a>
                </li>
                {% else %}

                <li class="nav-item ">
                    <a class="nav-link {{ app.current_route == 'app_login' ? 'active' : '' }}" href={{ path('app_login') }}>Login</a>
                </li>
                {% endif %}
                
            </ul>
        </nav>

        <span class="text-white">&copy; 2025 Olga&Symfony, Inc</span>
</footer>