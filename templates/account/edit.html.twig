{% extends 'base.html.twig' %}

{% block title 'Update Profile' %}

{% block body %}

<div class="row ">
    <div class="col-md-6 mx-auto text-center form-container">
    <h1 class="text-center my-5">{{'Update Profile'|trans}}</h1>
   
    {{form_start(userForm)}}
    {{form_row(userForm.firstname)}}
    {{form_row(userForm.lastname)}}
    {{ form_row(userForm.imageFile) }}
    <br>
    
        <button type="submit" >{{'Apply changes'|trans}}</button>
    
{{form_end(userForm)}}
    </div>
</div>
{% endblock %}